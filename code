using System;

namespace dzkurs
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Player player = new Player(15, 7, '@');
            Renderer renderer = new Renderer();

            renderer.DrawPlayer(player.PlayerPositionX, player.PlayerPositionY, player.Character);
        }
    }

    class Player
    {
        public int PlayerPositionX { get; private set; }
        public int PlayerPositionY { get; private set; }
        public char Character { get; private set; }

        public Player(int playerPositionX, int playerPositionY, char character)
        {
            PlayerPositionX = playerPositionX;

            PlayerPositionY = playerPositionY;

            Character = character;
        }
    }

    class Renderer
    {
        public void DrawPlayer(int x, int y, char character)
        {
            Console.SetCursorPosition(x, y);

            Console.WriteLine(character);
        }
    }
}
